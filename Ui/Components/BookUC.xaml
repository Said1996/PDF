<UserControl x:Class="Ui.Views.BookUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ui.Views"
             mc:Ignorable="d" Width="800" Height="451">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="338*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="74*"/>
        </Grid.RowDefinitions>
        <Image Source="C:\Users\Saeed\Pictures\BrownBook1.png" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
        <Image x:Name="BookCover" Grid.Column="1" Stretch="Fill" Margin="5,7,6,9" Source="{Binding Cover}">
            
        </Image>
        <ProgressBar x:Name="DeterminateCircularProgress" Value="60" Grid.Column="1" Grid.Row="2" Height="20" Width="200" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding Path=Value,ElementName=DeterminateCircularProgress}" Grid.Row="2" Grid.Column="1" Width="60" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
